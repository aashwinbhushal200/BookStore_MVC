@model ProductVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Products.Id != 0 ? "Update" : "Create")  Product</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Products.Id" hidden />
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Products.Title" class="form-control border-0 shadow" />
                    @* tag helper sp-for="Name" *@
                    <label asp-for="Products.Title" class="ms-2"></label>
                    @* server side validation *@
                    <span asp-validation-for="Products.Title" class="text-danger"></span>
                </div>
                <div class=" py-2 col-12" text-muted>
                    <label asp-for="Products.Description" class="ms-2"></label>
                    <textarea asp-for="Products.Description" class="form-control border-0 shadow" />
                    </textarea>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Products.ISBN" class="form-control border-0 shadow" />
                    <label asp-for="Products.ISBN" class="ms-2"></label>
                    <span asp-validation-for="Products.ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Products.ListPrice" class="form-control border-0 shadow" />
                    <label asp-for="Products.ListPrice" class="ms-2"></label>
                    <span asp-validation-for="Products.ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Products.Author" class="form-control border-0 shadow" />
                    <label asp-for="Products.Author" class="ms-2"></label>
                    <span asp-validation-for="Products.Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Products.Price" class="form-control border-0 shadow" />
                    <label asp-for="Products.Price" class="ms-2"></label>
                    <span asp-validation-for="Products.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Products.Price50" class="form-control border-0 shadow" />
                    <label asp-for="Products.Price50" class="ms-2"></label>
                    <span asp-validation-for="Products.Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Products.Price100" class="form-control border-0 shadow" />
                    <label asp-for="Products.Price100" class="ms-2"></label>
                    <span asp-validation-for="Products.Price100" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="Products.CategoryId" asp-items="@Model.categoryList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <label asp-for="Products.CategoryId" class="ms-2"></label>
                    <span asp-validation-for="Products.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="file" class="form-control border-0 shadow" />
                    <label asp-for="Products.ImageUrl" class="ms-2"></label>
                    <span asp-validation-for="Products.ImageUrl" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    @if (Model.Products.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    }
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>



@* adding client side validation through shared/_ValidationScriptsPartial  *@
@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}